<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/widgetbg2"
    android:id="@+id/layout2">
    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@drawable/thema_change"
            android:scaleType="fitXY"
            android:id="@+id/thema_change_button"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/noon_widget_icon"
            android:id="@+id/widget_image"
            android:scaleType="fitCenter"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@+id/thema_change_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/select_item_button" />
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:src="@drawable/select_item"
            android:id="@+id/select_item_button"
            android:scaleType="fitXY"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/newsLayout">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/widget_tv"
                android:text="TITLE"
                android:textColor="@android:color/holo_blue_bright"
                android:gravity="center"
                android:textSize="10pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="#000000"
                android:id="@+id/widget_title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="content"
                android:textColor="#000000"
                android:id="@+id/widget_sub"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>